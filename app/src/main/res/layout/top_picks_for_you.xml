<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/eerie_black"
        android:layout_marginHorizontal="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="#424242"
                android:paddingEnd="34dp"
                android:paddingBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_bookmark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_add"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/topPicksImageView"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/topPicksRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="10dp"
                android:drawableStart="@drawable/image_star"
                android:text="9.0"
                android:textSize="16sp"
                android:textColor="@color/imdb_main_text"
                app:layout_constraintStart_toStartOf="@id/topPicksImageView"
                app:layout_constraintTop_toBottomOf="@+id/topPicksImageView" />

            <TextView
                android:id="@+id/topPicksTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="10dp"
                android:text="The Office"
                android:textColor="@color/imdb_main_text"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/topPicksImageView"
                app:layout_constraintTop_toBottomOf="@+id/topPicksRatingTextView" />

            <TextView
                android:id="@+id/topPicksReleaseDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="10dp"
                android:text="2005"
                android:textColor="@color/imdb_gray"
                app:layout_constraintStart_toStartOf="@id/topPicksImageView"
                app:layout_constraintTop_toBottomOf="@+id/topPicksTitleTextView" />

            <TextView
                android:id="@+id/topPicksDurationTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="10dp"
                android:text="2h 10m"
                android:textColor="@color/imdb_gray"
                app:layout_constraintStart_toEndOf="@id/topPicksReleaseDateTextView"
                app:layout_constraintTop_toBottomOf="@+id/topPicksTitleTextView" />

            <ImageButton
                android:id="@+id/fab"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/eerie_black"
                android:clickable="true"
                android:focusable="true"
                app:fabSize="auto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/info_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
