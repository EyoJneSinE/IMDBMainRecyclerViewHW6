<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/featuredTodayCardView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:backgroundTint="@color/chinese_black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/featuredTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/featuredTodayImageView"
            android:layout_width="124dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/featuredTodayImageView2"
            android:layout_width="124dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="138dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/featuredTodayImageView3"
            android:layout_width="124dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="266dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/featuredTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/image_format_list"
                android:pointerIcon="arrow"
                android:text="  List"
                android:textSize="20sp"
                android:textColor="@color/imdb_main_text"
                android:layout_marginStart="24dp"
                android:layout_marginVertical="36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/featuredTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Text"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="@color/imdb_main_text"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/featuredTodayCardView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/featuredTodayCardView"/>

</androidx.constraintlayout.widget.ConstraintLayout>
