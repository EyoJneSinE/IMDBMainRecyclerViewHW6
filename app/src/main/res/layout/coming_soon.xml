<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/eerie_black"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="#424242"
                android:paddingEnd="34dp"
                android:paddingBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_bookmark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_add"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/comingSoonImageView"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/comingSoonRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="10dp"
                android:drawableStart="@drawable/image_star"
                android:text="9.0"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/imdb_main_text"
                app:layout_constraintStart_toStartOf="@id/comingSoonImageView"
                app:layout_constraintTop_toBottomOf="@+id/comingSoonImageView" />

            <TextView
                android:id="@+id/comingSoonTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="10dp"
                android:text="The Office"
                android:textColor="@color/imdb_main_text"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/comingSoonImageView"
                app:layout_constraintTop_toBottomOf="@+id/comingSoonRatingTextView" />

            <TextView
                android:id="@+id/comingSoonReleaseDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:text="2005"
                android:textColor="@color/imdb_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/comingSoonImageView"
                app:layout_constraintTop_toBottomOf="@+id/comingSoonTitleTextView" />

            <TextView
                android:id="@+id/comingSoonAgeLimitTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:text="R"
                android:textColor="@color/imdb_gray"
                app:layout_constraintStart_toEndOf="@id/comingSoonReleaseDateTextView"
                app:layout_constraintTop_toBottomOf="@+id/comingSoonTitleTextView" />

            <TextView
                android:id="@+id/comingSoonDurationTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:text="188eps"
                android:textColor="@color/imdb_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/comingSoonAgeLimitTextView"
                app:layout_constraintTop_toBottomOf="@+id/comingSoonTitleTextView" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
